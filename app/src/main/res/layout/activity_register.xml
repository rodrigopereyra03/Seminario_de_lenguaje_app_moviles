<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/fondo5"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RegisterActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/oswald_variable_font_wght"
        android:text="REGISTRO"
        android:textColor="@color/white"
        android:textSize="30sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/oswald_variable_font_wght"
        android:text="Nombre :"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/oswald_variable_font_wght"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:hint="Ingrese su nombre"
        android:textColorHint="#615B5B"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/oswald_variable_font_wght"
        android:text="Correo :"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/oswald_variable_font_wght"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:hint="Ingrese su correo"
        android:textColorHint="#615B5B"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/oswald_variable_font_wght"
        android:text="Contrase単a :"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/oswald_variable_font_wght"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:hint="Ingrese su contrase単a"
        android:textColorHint="#615B5B"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/oswald_variable_font_wght"
        android:text="Vuelva a escribir la contrase単a :"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etPass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/oswald_variable_font_wght"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:hint="Repita la contrase単a"
        android:textColorHint="#615B5B"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbCondiciones"
        android:text="Aceptar terminos y condiciones"
        android:fontFamily="@font/oswald_variable_font_wght"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:theme="@style/Theme.Material3.DynamicColors.DayNight"

        />

    <View
        android:layout_width="367dp"
        android:layout_height="2dp"
        android:background="#39AEBA99"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"/>

    <Button
        android:id="@+id/btnCrear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#16B7E6AC"
        android:fontFamily="@font/oswald_variable_font_wght"
        android:text="Crear Cuenta"
        android:textColor="@color/black"
        android:textSize="19sp"

        android:textStyle="bold" />



</LinearLayout>